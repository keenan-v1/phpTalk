<?php

// This file contains the event hooks


function ev_imc_connect()
{
   global $imc, $mud;
 
   if( $imc->status > IMC_DISCONNECTED )
   {
      $mud->event_handler->remove( "ev_imc_connect" );
      return;
   }

   if( $imc->connect() === true )
      $mud->event_handler->remove( "ev_imc_connect" );
   else
      mudlog( "IMC: reattempting connection in 20 seconds..." );
}
